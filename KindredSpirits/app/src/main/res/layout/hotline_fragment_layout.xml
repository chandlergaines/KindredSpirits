<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hotline_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chandler.android.aca.kindredspirits.HotlineActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:alpha=".3"/>

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <TextView
            android:id="@+id/fragTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="title"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/fragNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="555-0123"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/fragDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="stuff and things"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/fragButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Call"/>

            <Button
                android:id="@+id/fragDismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/fragButton"
                android:text="Dismiss"/>

        </RelativeLayout>


    </LinearLayout>
</FrameLayout>