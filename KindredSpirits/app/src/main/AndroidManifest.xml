<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chandler.android.aca.kindredspirits">

    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera2"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="Kindred Spirits"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".NoteSettingsActivity"
            android:label="Log Settings"
            android:parentActivityName=".NoteActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".KindWordsActivity"
            android:label="Good Vibes"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".NoteActivity"
            android:label="Anxiety Log"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".HotlineActivity"
            android:label="Hotlines"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="Registration"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".BreathingActivity"
            android:label="Deep Breathing"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".FirebaseTest"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SafeCircle"
            android:label="Safe Circle"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ResourcesActivity"
            android:label="Resources"
            android:screenOrientation="portrait">
        </activity>

        <!-- Defining Services -->
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <activity android:name=".UpdatesActivity">
        </activity>
    </application>

</manifest>